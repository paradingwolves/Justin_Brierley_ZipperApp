@model ZipperApp.Models.ZipperCategoryViewModel

@{
    ViewData["Title"] = "Zippers For Sale";
}

<h1>Zip It!</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Zippers" asp-action="Index" method="get">
    <p>
        <select asp-for="ZipperCategory" asp-items="Model.Category">
            <option value="">All</option>
        </select>

        Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

@*I have decided to place my products in divs rather than a table to give it more of an e-commerce feel*@
<div class="row">
    @foreach (var item in Model.Zippers)
     {
        <div class="displaystyle">
             <div class="card">
                <img class="productImg" src="~/img/zippers/@item.ProductImage" />
                <div class="container2">
                    <p><strong>@Html.DisplayFor(modelItem => item.Name)</strong></p>
                    <p><strong>@Html.DisplayNameFor(model => model.Zippers[0].Category): </strong>@Html.DisplayFor(modelItem => item.Category)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Zippers[0].Material): </strong>@Html.DisplayFor(modelItem => item.Material)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Zippers[0].TeethSize): </strong>@Html.DisplayFor(modelItem => item.TeethSize)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Zippers[0].Colour): </strong>@Html.DisplayFor(modelItem => item.Colour)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Zippers[0].Price): </strong>@Html.DisplayFor(modelItem => item.Price)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Zippers[0].Rating): </strong>@Html.DisplayFor(modelItem => item.Rating)</p>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div> @*Instead of displaying data in a tbale, products now get their own div*@
            </div>
        </div>
     }
</div>